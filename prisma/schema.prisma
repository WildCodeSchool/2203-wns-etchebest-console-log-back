generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator typegraphql {
  provider = "typegraphql-prisma"
}


enum TicketStatus {
  TODO
  DOING
  DONE
}

model Ticket {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  title String
  creationDate String?
  description   String?
  status TicketStatus?
  assignee  String?
}